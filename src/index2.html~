function start() {
    canvas = document.getElementById( 'main' );
    if ( ! canvas || ! canvas.getContext ) { return false; }
    ctx = canvas.getContext( '2d' );
    ctx.fillStyle = "rgb(0,0,0)";
document.write(canvas.width);
    world = new World(50,10,5);
    //graph = new Graph();
    setInterval( "draw()", 40 );
}

function draw() {
    world.evolve();
    world.draw();test();
